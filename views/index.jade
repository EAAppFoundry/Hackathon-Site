script
    $(document).ready(function(){
        var teams = ['*', '.loggly', '.apollo', '.infinity'];
        var $count = 0;

        setInterval(function(){
            var $container = $('#container');

            $container.isotope({
               itemSelector: '.element'
            });

            $filterLinks = $('#filters').find('a');
            
            $container.isotope({filter: teams[$count]});

            if ($count === 3)
                $count = 0;
            else
                $count++;  
        }, 2000);
    });







                
