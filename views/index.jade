script
     $(function(){
       var $container = $('#container');

       $container.isotope({
           itemSelector: '.element'
       });

       $filterLinks = $('#filters').find('a');

       $filterLinks.click(function(){
          var $this = $(this);
          var selected = $(this).attr('data-filter');
          
          $container.isotope({filter: selected});
          return false;
           
       });
